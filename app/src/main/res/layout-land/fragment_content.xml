<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/flContentFragmentContainer"
    tools:context="unifar.unifar.readlight2.ContentFragment">

    <ImageView
        android:id="@+id/ivColorPalette"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:contentDescription="@string/colorpalette"
        app:srcCompat="@drawable/ic_color_lens_black_48dp" />

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="74dp" />
    <ImageView
        android:id="@+id/ivAddAlarmButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:contentDescription="@string/settings"
        app:srcCompat="@drawable/ic_add_alarm_black_48dp" />
    <ImageView
        android:id="@+id/ivSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end|top"
        android:contentDescription="@string/settings"
        app:srcCompat="@drawable/ic_settings_black_48dp" />
    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        android:layout_gravity="bottom|center"
        app:adUnitId="ca-app-pub-6418178360564076/8463869769" />
</FrameLayout>
